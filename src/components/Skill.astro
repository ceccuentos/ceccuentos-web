---
import { Icon } from "astro-icon/components";

interface Props {
  text: string;
  logo: string;
  key?: string;
}

const { text, logo } = Astro.props;
---

<li
  class="flex items-center space-x-4 text-sm font-medium text-neutral-600 dark:text-neutral-200 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-400"
>
  <span
    class="flex items-center justify-center w-10 h-10 rounded-xs bg-neutral-100/40 dark:bg-neutral-800/40 lg:backdrop-filter lg:backdrop-blur-xs"
    ><Icon name={logo} class="w-6" />
  </span>
  <span class="dark:text-neutral-400 text-neutral-600">{text}</span>
</li>
